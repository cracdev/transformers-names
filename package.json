{
  "name": "transformers-names-full",
  "version": "0.0.0-semantically-released",
  "description": "Get random transformers names from 1984 to 2011",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write 'src/**/*.{js,json}'",
    "format:check": "prettier --check 'src/**/*.{js,json}'",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "nyc report --reporter=lcov && codecov",
    "start": "npm run test",
    "watch:test": "npm test -- --watch",
    "test": "mocha src/index.spec.js --require @babel/register",
    "cover": "nyc --reporter=lcov npm test",
    "prebuild": "rimraf dist",
    "build": "npm-run-all prebuild build:main build:esm build:types build:umd build:umd.min",
    "build:main": "babel src --out-dir dist --ignore '**/*.spec.js' --copy-files",
    "build:esm": "babel src --out-dir dist --ignore '**/*.spec.js' --copy-files --out-file-extension .esm.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:umd": "webpack --mode=development --output-filename=index.umd.js",
    "build:umd.min": "webpack --mode=production --output-filename=index.umd.min.js",
    "validate": "npm run lint && npm run format:check && npm run cover && npm run check-coverage",
    "setup": "npm install && npm run validate",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cracdev/transformers-names.git"
  },
  "keywords": [
    "random",
    "transformers",
    "names",
    "generator"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Andres Castro <andres.ca@gmail.com> (http://crac.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cracdev/transformers-names/issues"
  },
  "homepage": "https://github.com/cracdev/transformers-names#readme",
  "dependencies": {
    "unique-random-array": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/register": "^7.24.6",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/js": "^9.9.1",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "babel-loader": "^9.1.3",
    "chai": "^5.1.1",
    "codecov": "^3.8.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "npm-run-all2": "^6.2.2",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
